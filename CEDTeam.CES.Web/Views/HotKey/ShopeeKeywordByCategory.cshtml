@model List<IGrouping<String, ShopeeKeywordModel>>
<style>
    table {
        clear: both;
        border-collapse: collapse;
        table-layout: fixed;
        word-wrap: break-word;
    }
    table.dataTable tbody th, table.dataTable tbody td {
        padding: 2px 2px;
    }
</style>
<div class="" style="padding-left: 10px; padding-right: 10px; padding-top: 20px">
    <table id="product-datatable" class="display" style="width:100%">
        <thead>
            <tr>
                <th>Tên danh mục</th>
                <th>Từ khóa HOT</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.Key</td>
                    <td>
                        @foreach (var keyword in item.ToList())
                        {
                            <a href="https://shopee.vn/search?keyword=@(keyword.Keyword)&subcategory=@(keyword.CategoryId)" target="_blank" class="btn btn-outline-warning">@keyword.Keyword</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<script>
    $('#product-datatable').DataTable({
        dom: 'Bfrtip',
        buttons: [
            'pageLength'
        ],
        scrollX: true,
        responsive: true,
        lengthMenu: [[10, 15, 30, -1], [10, 25, 20, "All"]],
        columnDefs: [
            { width: 100, targets: 0, className: "text-left" },
            { width: 250, targets: 1, className: "text-left" },
        ]
    });
</script>